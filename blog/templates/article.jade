
extends layout

block append vars
  - bodyclass = 'article-detail'

block prepend title
  | #{ page.title + " - "}

block header
  include author
  h1= page.title
  p.author
    | #{ "Written by " }
    mixin author(page.metadata.author)

block content
  article.article
    section.content!= typogr(page.html).typogrify()
    p.tags
      | #{ "Tagged: " }
      - var count = 0, total = page.metadata.tags.length
      each tagText in page.metadata.tags
        span.tag
          | #{ tagText + ((++count < total) ? ", " : "") }

